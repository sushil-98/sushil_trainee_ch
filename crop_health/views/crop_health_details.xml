<odoo>
	<data>	
		<record id="agriexpert_form_view" model="ir.ui.view">
			<field name="name">agriexpert.data.form</field>
			<field name="name">agriexpert.data.graph</field>
			<field name="model">agriexpert.data</field>
			<field name="arch" type="xml">
				<form string="Agri expert details">
					<sheet>
						<group>
							<field name="name"/>
							<field name="degree"/>
							<field name="license_no"/>
						</group>
						<notebook>
							<page string="Info">
								<form>
									<group>
										<field name="specialist"/>
										<field name="description"/>
									</group>
								</form>
							</page>
							<page string="Schedule">
								<form>
									<group>
										<field name="schedule_ids"/>
									</group>
								</form>
							</page>
						</notebook>
					</sheet>
				</form>	
			</field>	
		</record>
		<record id="agriexpert_tree_view" model="ir.ui.view">
			<field name="name">agriexpert.data.tree</field>
			<field name="model">agriexpert.data</field>
			<field name="arch" type="xml">
				<tree string="tree view">
					<field name="name"/>
					<field name="degree"/>
					<field name="license_no"/>
					<field name="specialist"/>
					<field name="description"/>
					<!-- <field name="schedule_ids" string="new"/> -->
				</tree>
			</field>
		</record>
		<record id="agriexpert_data_action" model="ir.actions.act_window">
			<field name="name">Agri Expert Details</field>
			<field name="res_model">agriexpert.data</field>
			<field name="view_mode">tree,form,graph</field>
		</record>

		<record id="crop_detail_form_view" model="ir.ui.view">
			<field name="name">crop.data.form</field>
			<field name="model">crop.data</field>
			<field name="arch" type="xml">
				<form string="Crop details">
					<sheet>
						<group>
							<field name="crop_name"/>
							<field name="seed_name"/>
							<field name="seed_no"/>
						</group>
					</sheet>
				</form>	
			</field>	
		</record>

		<record id="crop_detail_tree_view" model="ir.ui.view">
			<field name="name">crop.data.tree</field>
			<field name="model">crop.data</field>
			<field name="arch" type="xml">
				<tree string="Crop details tree view">
					<field name="crop_name"/>
					<field name="seed_name"/>
					<field name="seed_no"/>
				</tree>
			</field>
		</record>

		<record id="crop_data_action" model="ir.actions.act_window">
			<field name="name">Crop Details</field>
			<field name="res_model">crop.data</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record id="expert_availability_form_view" model="ir.ui.view">
			<field name="name">agriexpert.schedule.form</field>
			<field name="model">agriexpert.schedule</field>
			<field name="arch" type="xml">
				<form string="create your schedule">
					<sheet>
						<group>
							<group>
								<field name="day_from"/>
								<field name="time_from" widget="float_time"/>
							</group>
							<group>
								<field name="day_to"/>
								<field name="time_to" widget="float_time"/>
							</group>
						</group>
					</sheet>
				</form>	
			</field>	
		</record>

		<record id="expert_availability_tree_view" model="ir.ui.view">
			<field name="name">agriexpert.schedule.tree</field>
			<field name="model">agriexpert.schedule</field>
			<field name="arch" type="xml">
				<tree string='tree view'>
					<field name="day_from"/>
					<field name="time_from" widget="float_time"/>
					<field name="day_to"/>
					<field name="time_to" widget="float_time"/>
				</tree>	
			</field>	
		</record>

		<record id="expert_schedule_availability_action" model="ir.actions.act_window">
			<field name="name">create your schedule</field>
			<field name="res_model">agriexpert.schedule</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record id="agriexpert_observation_form_view" model="ir.ui.view">
			<field name="name">agriexpert.observation.form</field>
			<field name="model">agriexpert.observation</field>
			<field name="arch" type="xml">
				<form string="Crop details">
					<sheet>
						<group>
							<group>
								<field name="solution" widget="checkbox"/>
								
								<field name="treatment" attrs="{'invisible':[('solution','=',False)]}"/>
								<field name="detail" attrs="{'invisible':[('solution','=',False)]}"/>		
							</group>
							<group>
								<field name="phisical" widget="checkbox"/>
								<field name="observation" attrs="{'invisible':[('phisical','=',False)]}"/>
								<field name="description" attrs="{'invisible':[('phisical','=',False)]}" />
							</group>
						</group>
						<notebook>
							<page string="Farmer name">
								<group>
									<field name="farmer_id"/>
								</group>
							</page>	
						</notebook>
					</sheet>
				</form>	
			</field>	
		</record>

		<record id="agriexpert_treatment_tree_view" model="ir.ui.view">
			<field name="name">agriexpert.observation.tree</field>
			<field name="model">agriexpert.observation</field>
			<field name="arch" type="xml">
				<tree string="tree view">
					<field name="farmer_id"/>
					<field name="treatment"/>
					<field name="detail"/>
					<field name="observation"/>
					<field name="description"/>
				</tree>
			</field>
		</record>

		<record id="agriexpert_treatment_action" model="ir.actions.act_window">
			<field name="name">Observation Details</field>
			<field name="res_model">agriexpert.observation</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record id="agriexpert_observation_action" model="ir.actions.act_window">
			<field name="name">Observation Details</field>
			<field name="res_model">agriexpert.observation</field>
			<field name="view_mode">tree,form</field>
		</record>

		<record id="farmer_data_tree_view" model="ir.ui.view">
			<field name="name">farmer.inquiry.data.tree</field>
			<field name="model">farmer.data</field>
			<field name="arch" type="xml">
				<tree string="Farmer details tree view">
					<field name="farmer_name"/>
					<field name="farmer_mobile_no"/>
					<field name="farmer_email"/>
					<field name="farmer_address"/>
				</tree>
			</field>
		</record>

		<record id="farmer_data_form_view" model="ir.ui.view">
			<field name="name">farmer.inquiry.data.form</field>
			<field name="model">farmer.data</field>
			<field name="arch" type="xml">
				<form string="Farmer details">
					<sheet>
						<group>
							<field name="farmer_name"/>
							<field name="farmer_mobile_no"/>
							<field name="farmer_email"/>
							<field name="farmer_address"/>
						</group>
					</sheet>
				</form>	
			</field>	
		</record>

		
		<record id="farmer_data_action" model="ir.actions.act_window">
			<field name="name">Farmer Details</field>
			<field name="res_model">farmer.inquiry</field>
			<field name="view_mode">tree,form</field>
			<field name="view_id" ref="farmer_data_tree_view"/>
		</record>

		<record id="farmer_inquiry_tree_view" model="ir.ui.view">
			<field name="name">farmer.inquiry.tree</field>
			<field name="model">farmer.inquiry</field>
			<field name="arch" type="xml">
				<tree string="Inquiry details tree view" decoration-success="state=='new'" decoration-warning="state=='confirm'" decoration-danger="state=='cancel'" decoration-primary="state=='done'">
					<field name="problem"/>
					<field name="crop_id" widget=""/>
					<field name="image"/>
					<field name="farmer_id"/>
					<field name="state"/>
				</tree>
			</field>
		</record>
		<record id="farmer_inquiry_form_view" model="ir.ui.view">
			<field name="name">farmer.inquiry.form</field>
			<field name="model">farmer.inquiry</field>

			<field name="arch" type="xml">
				<form string="Inquiry details form view">
					<header>
						<button name="button_new" string="New" class="btn-info" type="object" states="cancel"/>

						<button name="button_confirm" string="Confirm" class="btn-primary" type="object" states="new"/>

						<button name="button_done" string="Done" class="btn-success" type="object" states="new,confirm"/>

						<button name="button_cancel" string="Cancelled" class="btn-danger" type="object" states="new,confirm,done"/>

						<field name="state" widget="statusbar" statusbar_visible="new,confirm,done,cancel" clickable="True"/>
					</header>
					<sheet>
						<group>
							<field name="problem"/>
							<field name="image" widget="image"/>
						</group>
						<notebook>
							<page string="Crop Details">
								<form>
									<group>
										<field name="crop_id" widget="many2one_tags"/>
									</group>
								</form>
							</page>
							<page string="Farmer Details">
								<form>
									<group>
										<field name="farmer_id"/>
									</group>
								</form>
							</page>
						</notebook>
					</sheet>
					<div class="oe_chatter">
		                <field name="message_follower_ids" widget="mail_followers"/>
		                <field name="activity_ids" widget="mail_activity"/>
		                <field name="message_ids" widget="mail_thread"/>
            		</div>
				</form>	
			</field>	
		</record>

		<record id="farmer_inquiry_graph_view" model="ir.ui.view">
			<field name="name">farmer.inquiry.graph</field>
			<field name="model">farmer.inquiry</field>
			<field name="arch" type="xml">
				<graph string="Graph view">
					<field name="state"/>
				</graph>
			</field>	
		</record>


		<record id="farmer_inquiry_kanban" model="ir.ui.view">
            <field name="name">farmer.inquiry.kanban</field>
            <field name="model">farmer.inquiry</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="color"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div
                                    t-attf-class="oe_kanban_color_{{kanban_getcolor(record.color.raw_value)}}
                                                  oe_kanban_global_click_edit oe_semantic_html_override
                                                  oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                                <div class="oe_dropdown_kanban">
                                    <!-- dropdown menu -->
                                    <div class="oe_dropdown_toggle">
                                        <i class="fa fa-bars fa-lg" title="Manage" aria-label="Manage"/>
                                        <ul class="oe_dropdown_menu">
                                            <li>
                                                <a type="delete">Delete</a>
                                            </li>
                                            <li>
                                                <ul class="oe_kanban_colorpicker"
                                                    data-field="color"/>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="oe_clear"></div>
                                </div>
                                <div t-attf-class="oe_kanban_content">
                                    <!-- title -->
                                    Problem:
                                    <field name="problem"/>
                                    <br/>
                                    Crop Name:
                                    <field name="crop_id"/>
                                    <!-- <br/>
                                    State:
                                    <field name="state"/> -->
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


		<record id="farmer_inquiry_data_action" model="ir.actions.act_window">
			<field name="name">Inquiry Details</field>
			<field name="res_model">farmer.inquiry</field>
			<field name="view_mode">tree,form,kanban,graph</field>
			<field name="view_id" ref="farmer_inquiry_tree_view"/>
		</record>


		<record id="agriexpert_dashboard_view" model="ir.ui.view">
			<field name="name">farmer.inquiry.dashboard</field>
			<field name="model">farmer.inquiry</field>
			<field name="arch" type="xml">
				<dashboard>
		    		<view type="graph" ref="crop_health.farmer_inquiry_graph_view"/>
		    		<view type="kanban" ref="crop_health.farmer_inquiry_kanban"/>
					<!-- <group string="Dashboard">	
					</group> -->
					<view type="pivot" ref="crop_health.farmer_inquiry_pivot_view"/>
				</dashboard>
			</field>
		</record>

		<record id="agriexpert_dashboard_action" model="ir.actions.act_window">
			<field name="name">Inquiry Details</field>
			<field name="res_model">farmer.inquiry</field>
			<field name="view_mode">dashboard,tree,form,pivot,graph,kanban</field>
		</record>

		<record id="farmer_inquiry_pivot_view" model="ir.ui.view">
			<field name="name">farmer.inquiry.pivot</field>
			<field name="model">farmer.inquiry</field>
			<field name="arch" type="xml">
				<pivot string="Pivot view">
					<field name="state" type="col"/>
					<!-- <field name="crop_id" type="col"/> -->
           			<field name="problem" type="row"/>
				</pivot>
			</field>
		</record>

		<record id="farmer_inquiry_pivot_action" model="ir.actions.act_window">
			<field name="name">Inquiry</field>
			<field name="res_model">farmer.inquiry</field>
			<field name="view_mode">pivot,tree,form</field>
		</record>

		<record id="agriexpert_observation_pivot_view" model="ir.ui.view">
			<field name="name">agriexpert.observation.pivot</field>
			<field name="model">agriexpert.observation</field>
			<field name="arch" type="xml">
				<pivot string="Pivot view">
					<field name="farmer_id" type="col"/>
           			<field name="observation" type="row" interval="day"/>
				</pivot>
			</field>
		</record>


		<record id="agriexpert_observation_pivot_action" model="ir.actions.act_window">
			<field name="name">Observation schedule</field>
			<field name="res_model">agriexpert.observation</field>
			<field name="view_mode">pivot,tree,form</field>
		</record>

		<record id="payment_data_form_view" model="ir.ui.view">
			<field name="name">payment.data.form</field>
			<field name="model">payment.data</field>
			<field name="arch" type="xml">
				<form string="Payment details">
					<sheet>
						<group>
							<field name="amount"/>
							<field name="description"/>
						</group>
					</sheet>
				</form>	
			</field>	
		</record>
		<record id="payment_data_tree_view" model="ir.ui.view">
			<field name="name">payment.data.tree</field>
			<field name="model">payment.data</field>
			<field name="arch" type="xml">
				<tree>
					<field name="amount"/>
					<field name="description"/>
				</tree>
			</field>
		</record>

		<record id="agriexpert_payment_action" model="ir.actions.act_window">
			<field name="name">Payment</field>
			<field name="res_model">payment.data</field>
			<field name="view_mode">tree,form</field>
		</record>

		<!-- <Main menu> -->
		<menuitem id="main_menu"
		name="Crop Health"
		web_icon="crop_health,static/description/icon.png"
		action="agriexpert_dashboard_action"/>

		<!-- <Agriexpert menu> -->
		<menuitem id="menuitem1"
		name="Agriexpert"
		action=""
		parent="main_menu" sequence="1"
		groups="crop_health.group_agriexpert"/>

		<menuitem id="menuitem16"
		name="Fill Your Details"
		action="agriexpert_data_action"
		parent="menuitem1" sequence="1"/>

		<menuitem id="menuitem2"
		name="Inquiry"
		action="farmer_inquiry_data_action"
		parent="menuitem1" sequence="2"/>
		
		<menuitem id="menuitem3"
		name="Treatment/Observation"
		action="agriexpert_treatment_action"
		parent="menuitem1" sequence="3"/>

		<menuitem id="menuitem8"
		name="Reporting"
		action=""
		groups="crop_health.group_agriexpert"
		parent="main_menu" sequence="3"/>

		<menuitem id="menuitem9"
		name="Inquiry"
		action="farmer_inquiry_pivot_action"
		parent="menuitem8" sequence="1"/>

		<menuitem id="menuitem10"
		name="Observation"
		action="agriexpert_observation_pivot_action"
		parent="menuitem8" sequence="2"/>

		<menuitem id="menuitem11"
		name="Configuration"
		action=""
		groups="crop_health.group_agriexpert"
		parent="main_menu" sequence="4"/>

		<menuitem id="menuitem12"
		name="Crop Details"
		action="crop_data_action"
		parent="menuitem11" sequence="1"/>

		<menuitem id="menuitem13"
		name="Availability/Schedule"
		action="expert_schedule_availability_action"
		parent="menuitem11" sequence="2"/>

		<menuitem id="menuitem14"
		name="Farmer Details"
		action="farmer_data_action"
		parent="menuitem11" sequence="3"/>

		<menuitem id="menuitem17"
		name="Payment"
		action="agriexpert_payment_action"
		parent="main_menu" sequence="6"/>


		<!-- <Farmer menu> -->
