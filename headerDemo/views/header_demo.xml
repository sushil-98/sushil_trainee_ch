<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<data>
		<record id="header_app_tree_view" model="ir.ui.view">
			<field name="name">header.demo.tree</field>
			<field name="model">header.demo</field>
			<field name="arch" type="xml">
				<calendar string="Date Of Birht" date_start="start_date" date_stop="end_date" color="date_of_birth">
    				<field name="name"/>
				</calendar>
				<form string='header demo'>
					<header>
						<button name="button_confirmed" string="Confirmed" class="btn-info" type="object"/>
						<button name="button_draft" string="Draft" class="btn-primary" type="object"/>
						<button name="button_done" string="Done" class="btn-success" type="object"/>
						<button name="button_cancel" string="Cancelled" class="btn-danger" type="object"/>
						<field name="state" widget="statusbar" statusbar_visible="confirmed,draft,done"/>
					</header>
					<sheet>
						<group>
							<field name="name"/>
							<field name="mobile_no"/>
							<field name="date_of_birth"/>
							<field name="start_date"/>
							<field name="end_date"/>
						</group>
					</sheet>
				</form>
			</field>
 		</record>


 		<record id="header_demo_action" model="ir.actions.act_window">
			<field name="name">header demo</field>
			<field name="res_model">header.demo</field>
			<field name="view_mode">tree,form,calendar</field>
		</record>

		<menuitem id="main_menu" name="Header Demo"/>

		<menuitem id="menuitem1" name="Header" action="header_demo_action" parent="main_menu"/>
    </data>
</odoo>