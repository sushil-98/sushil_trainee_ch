<odoo>
	 <template id="index">
            <t t-call="website.layout">
                <t t-set="title">Agriexpert</t>
                <div class="oe_structure">
                    <div class="container">
                    	<table class="table table-hover">
	                    	<thead>
							    <tr>
							      <th scope="col">Name</th>
							      <th scope="col">Degree</th>
							      <th scope="col">License No</th>
							      <th scope="col">Specialist</th>
							      <th scope="col">Description</th>
							      <th scope="col">Action</th>
							    </tr>
							</thead>
						
								<a role="button" t-attf-href="/agriexpert/edit/">Create</a>
					
							<tbody>
                        		<t t-foreach="agriexpert" t-as="expert">
	                        		<tr>
			                           	<td><t t-esc="expert.name"/></td>
			                           	<td><t t-esc="expert.degree"/></td>
			                           	<td><t t-esc="expert.license_no"/></td>
			                           	<td><t t-esc="expert.specialist"/></td>
			                           	<td><t t-esc="expert.description"/></td>

			                           	<div class="col pl-0">
			                           		<td>
			                           			<a t-attf-href="/agriexpert/edit/{{slug(expert)}}" class=""><i class="fa fa-edit"/></a>
			                           		</td>
			                           		<td>
			                          			<a t-attf-href="/agriexpert/delete/{{slug(expert)}}" class=""><i class="fa fa-trash"/></a>
			                           		</td>
			                           	</div>
		                        	</tr>
	                        	</t>
	                        </tbody>
                        </table>  
                    </div>
                </div>
            </t>
        </template>

        <template id="create_record">
        	<t t-call="website.layout">
        		<form t-attf-action="/agriexpert/create/#{expert.id if expert else ''}" method="post">
        			<div class="col-sm-4">
        			<h2>Create new Record</h2>
        		
        			<div class="form-group">
        				<label>Name:</label>
        				<input type="text" class="form-control" t-attf-value="#{expert.name if expert else ''}" name="name" placeholder="Enter your name"/>
        			</div>
        			<div class="form-group">
        				<label>Degree:</label>
        				<input type="text" class="form-control" t-attf-value="#{expert.degree if expert else ''}" name="degree" placeholder="Enter your Degree"/>
        			</div>
        			<div class="form-group">
        				<label>License No:</label>
        				<input type="text" class="form-control" t-attf-value="#{expert.license_no if expert else ''}" name="license_no" placeholder="Enter your License no"/>
        			</div>
        			<div class="form-group">
        				<label>Specialist:</label>
        				<select name="specialist" class="form-control" t-attf-value="#{expert.specialist if expert else ''}" id="specialist">
        					<!-- <t t-foreach="agriexpert" t-as="sp">
        						<option t-attf-value="{{sp.specialist}}">
        							<t t-esc='sp.specialist'/>
        						</option>
    						</t> -->
        					<option value="wheet-specialist">Wheet-Specialist</option>
        					<option value="beans-specialist">Beans-Specialist</option>
        					<option value="cron-specialist">Cron-Specialist</option>
        				</select>
        			</div>
        			<div class="form-group">
        				<label>Description:</label>
        				<input type="text" class="form-control" t-attf-value="#{expert.description if expert else ''}" name="description" placeholder="Enter Description"/>
        			</div>
        			<input type="submit" class="btn btn-info" t-attf-value="#{'Update' if expert else 'Create'}"/>
        		</div>
        		</form>
        		
        	</t>
        	
        </template>

        <template id="inquiry">
        	<t t-call="website.layout">
        		<t t-set="title">Inquiry</t>
                <div class="oe_structure">
                	<div class="container">
                		<table class="table table-hover">
                			<thead>
							    <tr>
							      <th scope="col">Problem</th>
							      <th scope="col">Crope Id</th>
							      <th scope="col">Image</th>
							      <th scope="col">Expert id</th>
							    </tr>
							</thead>
						
								<!-- <a role="button" t-attf-href="">New Inquiry</a> -->

							<tbody>
                        		<t t-foreach="inquiry" t-as="inq">
	                        		<tr>
			                           	<td><t t-esc="inq.problem"/></td>
			                           	<td><t t-esc="inq.crop_id"/></td>
			                           	<!-- <td><t t-esc="inq.image"/></td> -->
			                           	<td><t t-esc="inq.expert_id"/></td>

			                           <!-- 	<div class="col pl-0">
			                           		<td>
			                           			<a t-attf-href="/agriexpert/edit/{{slug(expert)}}" class=""><i class="fa fa-edit"/></a>
			                           		</td>
			                           		<td>
			                          			<a t-attf-href="/agriexpert/delete/{{slug(expert)}}" class=""><i class="fa fa-trash"/></a>
			                           		</td>
			                           	</div> -->
		                        	</tr>
	                        	</t>
	                        </tbody>
                		</table>
                		
                	</div>
                </div>	
        	</t>
        </template>

</odoo>