<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="wizard_form_view" model="ir.ui.view">
            <field name="name">wizard.form</field>
            <field name="model">farmer.inquiry.wizard</field>
            <field name="arch" type="xml">
                <form string="Add inquiry">
                    <group>
                        <field name="inquiry_id"/>
                        <field name="expert_ids"/>
                    </group>
                    <footer>
                        <button name="subscribe" type="object"
                                string="Subscribe" class="oe_highlight"/>
                        or
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="launch_farmer_wizard"
                    name="Add inquiry"
                    binding_model="farmer.inquiry.detail"
                    res_model="farmer.inquiry.wizard"
                    view_mode="form"
                    target="new"/>

        <menuitem id="wizard_menu" name="Add inquiry" action="launch_farmer_wizard" parent="menuitem2" sequence="3"/>        
    </data>
</odoo>
